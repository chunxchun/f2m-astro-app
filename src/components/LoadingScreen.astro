---
// LoadingScreen.astro
---

<div id="loading-screen" class="fixed inset-0 bg-white z-50 flex items-center justify-center">
  <div class="text-center">
    <h1 id="f2m-text" class="text-6xl md:text-8xl lg:text-9xl font-bold text-black opacity-0">
      f2m
    </h1>
    <div id="underline" class="h-1 bg-black mt-4 max-w-0 mx-auto"></div>
    <div id="yellow-dot" class="w-3 h-3 bg-yellow-400 rounded-full mx-auto mt-4 opacity-0 cursor-pointer hover:scale-110 transition-transform duration-200"></div>
  </div>
</div>

<style>
  #f2m-text {
    animation: fadeIn 1s ease-in-out 0.5s forwards;
  }
  
  #underline {
    animation: drawUnderline 1s ease-in-out 2s forwards;
  }
  
  #yellow-dot {
    animation: showDot 0.5s ease-in-out 3s forwards;
  }
  
  #loading-screen {
    transition: opacity 0.5s ease-in-out, visibility 0.5s ease-in-out;
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes drawUnderline {
    from {
      max-width: 0;
    }
    to {
      max-width: 200px;
    }
  }
  
  @keyframes showDot {
    from {
      opacity: 0;
      transform: scale(0);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }
  
</style>

<script>
  // Hide loading screen when yellow dot is clicked
  document.addEventListener('DOMContentLoaded', () => {
    const yellowDot = document.getElementById('yellow-dot');
    const loadingScreen = document.getElementById('loading-screen');
    
    if (yellowDot && loadingScreen) {
      yellowDot.addEventListener('click', () => {
        loadingScreen.style.opacity = '0';
        loadingScreen.style.visibility = 'hidden';
        
        // Remove from DOM after fade out
        setTimeout(() => {
          loadingScreen.style.display = 'none';
        }, 500); // Match the fadeOut animation duration
      });
    }
  });
</script>
